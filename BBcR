  - action: write_file
    path: ./server.cfg
    contents: |
      ## ==============================================
      ## ‚öôÔ∏è CONFIGURACI√ìN PRINCIPAL
      ## ==============================================
      endpoint_add_tcp "0.0.0.0:30120"
      endpoint_add_udp "0.0.0.0:30120"
      set sv_enforceGameBuild 1491
      set gamename rdr3
      sv_maxclients 48
      sv_hostname "La Pradera RP | Servidor RedM Roleplay"
      sets tags "roleplay, western, vorp, bcc"
      sets locale "es-ES"
      load_server_icon mylogo.png
      sets sv_projectName "La Pradera RP"
      sets sv_projectDesc "Servidor Roleplay RedM basado en VORP + BCC"
      sets Discord "https://discord.gg/TUSERVER"
      sets website "https://tuserver.com"
      sv_scriptHookAllowed 0

      # RCON
      rcon_password "cambia_esto"

      # Steam API
      set steam_webApiKey "none"

      # Licencias
      sv_licenseKey "AQUI_TU_KEY"

      # Logs
      sv_endpointprivacy true

      ## ==============================================
      ## üìÇ RECURSOS VORP (EXTERNOS)
      ## ==============================================
      ensure vorp_wildhorse
      ensure ks_multijob

